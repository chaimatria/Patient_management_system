{
  "name": "doclink-medical",
  "version": "1.0.0",
  "description": "Medical Management System with Electron and SQLite",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:build": "next build && electron ."
  },
  "dependencies": {
    "better-sqlite3": "^12.4.5",
    "html2pdf.js": "^0.12.1",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.doclink.medical",
    "productName": "DocLink Medical",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "lib/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.561.0",
    "next": "14.2.35",
    "pdfkit": "^0.17.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "wait-on": "^7.2.0"
  }
}
