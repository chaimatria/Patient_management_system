{
  "name": "doclink-medical",
  "version": "1.0.0",
  "description": "Medical Management System with Electron and SQLite",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run export && electron-builder",
    "electron:build:win": "npm run export && electron-builder --win",
    "electron:build:mac": "npm run export && electron-builder --mac",
    "electron:build:linux": "npm run export && electron-builder --linux"
  },
  "build": {
    "appId": "com.doclink.medical",
    "productName": "DocLink Medical",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "lib/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.561.0",
    "next": "14.2.35",
    "pdfkit": "^0.17.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "wait-on": "^7.2.0"
  }
}
